@model List<KitchenOrderResultDTO>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var title = ViewData["Title"] as string ?? "Siparişler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">@title</h4>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="default-table-area mx-minus-1 table-to-do-list">
    <div class="table-responsive">
        <table class="table align-middle w-100">
            <thead>
                <tr>
                    <th>Sipariş</th>
                    <th>Masa</th>
                    <th>Müşteri</th>
                    <th>Tutar</th>
                    <th>Durum</th>
                    <th>Zaman</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var x in Model)
                    {
                        <tr>
                            <td>#@x.OrderID</td>
                            <td>Masa #@x.TableID</td>
                            <td>@x.CustomerName</td>
                            <td>@x.TotalPrice.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))</td>
                            <td>@x.StatusText</td>
                            <td>@x.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <a asp-action="Detail" asp-route-id="@x.OrderID" class="btn btn-sm btn-outline-primary">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            Bu filtreye ait sipariş bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
