<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
    <h3 class="mb-0">@ViewData["Title"]</h3>

    @* Breadcrumb istersen ViewData ile kontrol edersin *@
    @if (ViewData["ShowBreadcrumb"] as bool? ?? true)
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="/Dashboard/Index/" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>

                @* İstersen breadcrumb'ı buradan dinamik üretiriz (sonra birlikte yaparız) *@
                @if (ViewData["Breadcrumb"] is List<string> bc && bc.Count > 0)
                {
                    for (int i = 0; i < bc.Count; i++)
                    {
                        var isLast = i == bc.Count - 1;
                        <li class="breadcrumb-item active" aria-current="page">
                            <span class="@(isLast ? "text-secondary" : "")">@bc[i]</span>
                        </li>
                    }
                }
            </ol>
        </nav>
    }
</div>