    <!-- Floating Cart Button -->
    <button class="cart-fab" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas" aria-controls="cartOffcanvas">
        <i class="bi bi-bag"></i>
        <span class="cart-count" id="cartCount">0</span>
    </button>

    <!-- Cart Offcanvas -->
    <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="cartOffcanvas">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title fw-bold">
                <i class="bi bi-bag me-2 text-emerald"></i> Sipariş Sepeti
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>

        <div class="offcanvas-body d-flex flex-column">
            <div id="cartItems" class="cart-items flex-grow-1">
                <div class="cart-empty text-center py-5">
                    <i class="bi bi-emoji-smile fs-1 text-emerald"></i>
                    <h6 class="fw-bold mt-3">Sepet boş</h6>
                    <p class="text-gray-400 mb-0">Menüden ürün ekleyerek siparişe başlayabilirsin.</p>
                </div>
            </div>

            <div class="cart-summary border-top border-light border-opacity-10 pt-3">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-gray-400">Ara Toplam</span>
                    <span class="fw-bold" id="cartSubtotal">0 TL</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-gray-400">Servis</span>
                    <span class="fw-bold" id="cartService">0 TL</span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="fw-bold">Toplam</span>
                    <span class="fs-5 fw-bold text-emerald" id="cartTotal">0 TL</span>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-emerald rounded-pill py-3 fw-bold" id="checkoutBtn">
                        Siparişi Tamamla
                    </button>
                    <button class="btn btn-outline-white rounded-pill py-3" id="clearCartBtn">
                        Sepeti Temizle
                    </button>
                </div>

                <small class="d-block text-center text-gray-400 mt-3">
                    Demo sepet: gerçek sipariş entegrasyonu API ile bağlanacak.
                </small>
            </div>
        </div>
    </div>


    <div class="modal fade" id="reserveModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 rounded-5 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5 d-none d-md-block bg-cover" style="background-image: url('https://images.unsplash.com/photo-1550966841-396ad88675c7?w=500');"></div>
                    <div class="col-md-7 p-5">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="fw-bold mb-0">Rezervasyon</h3>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form id="reservationForm">
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Ad Soyad</label>
                                <input type="text" class="form-control rounded-pill px-3" placeholder="Yunus..." required>
                            </div>
                            <div class="row g-3 mb-3">
                                <div class="col-6">
                                    <label class="form-label small fw-bold">Telefon</label>
                                    <input type="tel" class="form-control rounded-pill px-3" placeholder="05XX..." required>
                                </div>
                                <div class="col-6">
                                    <label class="form-label small fw-bold">Kişi Sayısı</label>
                                    <select class="form-select rounded-pill px-3">
                                        <option>1 Kişi</option>
                                        <option selected>2 Kişi</option>
                                        <option>4 Kişi</option>
                                        <option>6+ Kişi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label small fw-bold">Tarih</label>
                                <input type="date" class="form-control rounded-pill px-3" required>
                            </div>
                            <button type="submit" class="btn btn-emerald w-100 rounded-pill py-3 fw-bold">Masayı Ayır</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="cartToast" class="toast align-items-center text-white bg-emerald border-0 rounded-4 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check2-circle me-2"></i> <span id="toastMsg">Sepete eklendi!</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
    <button id="scrollTopBtn" class="scroll-top-btn" aria-label="Yukarı çık">
        <i class="bi bi-arrow-up"></i>
    </button>


