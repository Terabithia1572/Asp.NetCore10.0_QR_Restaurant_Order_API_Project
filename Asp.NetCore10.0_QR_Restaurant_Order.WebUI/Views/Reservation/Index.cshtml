@model List<ReservationViewModel>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var title = ViewData["Title"] as string ?? "Rezervasyonlar";
    ViewData["Title"] = title;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">@title</h4>

    <div class="d-flex gap-2">
        <a asp-controller="Reservation" asp-action="Index" class="btn btn-sm btn-outline-secondary">
            Tümü
        </a>
        <a asp-controller="Reservation" asp-action="Today" class="btn btn-sm btn-outline-secondary">
            Bugün
        </a>
        <a asp-controller="Reservation" asp-action="Pending" class="btn btn-sm btn-outline-warning">
            Bekleyenler
        </a>
        <button type="button" class="btn btn-sm btn-primary" disabled>
            Yeni Rezervasyon (yakında)
        </button>
    </div>
</div>

<div class="default-table-area mx-minus-1 table-to-do-list">
    <div class="table-responsive">
        <table class="table align-middle w-100">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Müşteri</th>
                    <th>Telefon</th>
                    <th>Misafir</th>
                    <th>Tarih / Saat</th>
                    <th>Masa</th>
                    <th>Durum</th>
                    <th>Kaynak</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var r in Model)
                    {
                        var statusText = Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationExtensions.ToStatusText(r.Status);
                        var sourceText = Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationExtensions.ToSourceText(r.Source);

                        string statusBadgeClass = r.Status switch
                        {
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationStatus.Pending => "bg-warning-subtle text-warning",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationStatus.Confirmed => "bg-info-subtle text-info",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationStatus.Seated => "bg-primary-subtle text-primary",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationStatus.Completed => "bg-success-subtle text-success",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationStatus.Cancelled => "bg-secondary-subtle text-secondary",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationStatus.NoShow => "bg-danger-subtle text-danger",
                            _ => "bg-light text-muted"
                        };

                        string sourceBadgeClass = r.Source switch
                        {
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationSource.Phone => "bg-secondary-subtle text-secondary",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationSource.Web => "bg-primary-subtle text-primary",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationSource.QR => "bg-info-subtle text-info",
                            Asp.NetCore10._0_QR_Restaurant_Order.UI.Controllers.ReservationSource.WalkIn => "bg-success-subtle text-success",
                            _ => "bg-light text-muted"
                        };

                        <tr>
                            <td>@r.Id</td>
                            <td>
                                <div class="fw-semibold">
                                    @r.CustomerName
                                    @if (r.IsVip)
                                    {
                                        <span class="badge bg-warning-subtle text-warning ms-1">VIP</span>
                                    }
                                </div>
                                <div class="text-muted small">
                                    @r.Email
                                </div>
                            </td>
                            <td>@r.Phone</td>
                            <td>@r.GuestCount kişi</td>
                            <td>
                                @r.ReservationDate.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td>
                                @if (r.TableId.HasValue)
                                {
                                    <span class="badge bg-light text-dark">Masa @r.TableId</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted">Atanmadı</span>
                                }
                            </td>
                            <td>
                                <span class="badge @statusBadgeClass">
                                    @statusText
                                </span>
                            </td>
                            <td>
                                <span class="badge @sourceBadgeClass">
                                    @sourceText
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-controller="Reservation"
                                   asp-action="Detail"
                                   asp-route-id="@r.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">
                            Bu filtreye ait rezervasyon bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
