@model List<CustomerViewModel>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Müşteri Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Müşteri Yönetimi</h4>

    <div class="d-flex gap-2">
        <button class="btn btn-sm btn-outline-secondary" disabled>
            Yeni Müşteri Ekle (yakında)
        </button>
        <button class="btn btn-sm btn-outline-secondary" disabled>
            Filtreler (yakında)
        </button>
    </div>
</div>

<div class="default-table-area mx-minus-1">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Telefon</th>
                    <th>E-posta</th>
                    <th>Sipariş Sayısı</th>
                    <th>Toplam Harcama</th>
                    <th>Ort. Fiș</th>
                    <th>Son Sipariş</th>
                    <th>Etiketler</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td class="fw-semibold">@c.FullName</td>
                            <td>@c.Phone</td>
                            <td>@c.Email</td>
                            <td>@c.TotalOrders</td>
                            <td>
                                @c.TotalSpend.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                            </td>
                            <td>
                                @c.AverageTicket.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                            </td>
                            <td>
                                @if (c.LastOrderDate.HasValue)
                                {
                                    @c.LastOrderDate.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (c.Tags != null && c.Tags.Any())
                                {
                                    foreach (var tag in c.Tags)
                                    {
                                        var badgeClass = tag switch
                                        {
                                            "VIP" => "bg-warning-subtle text-warning",
                                            "High Value" => "bg-success-subtle text-success",
                                            "Regular" => "bg-info-subtle text-info",
                                            "New" => "bg-primary-subtle text-primary",
                                            _ => "bg-secondary-subtle text-secondary"
                                        };

                                        <span class="badge me-1 @badgeClass">@tag</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-controller="Customer"
                                   asp-action="Detail"
                                   asp-route-id="@c.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center text-muted">
                            Henüz kayıtlı müşteri bulunmuyor.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
