@model CustomerViewModel

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Müşteri Detayı</h4>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-sm btn-outline-secondary">
        ← Listeye Dön
    </a>
</div>

<div class="row">
    <div class="col-xl-4 col-lg-5 col-md-12 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="fw-semibold mb-1">@Model.FullName</h5>
                <div class="text-muted mb-3">
                    @(Model.Tags != null && Model.Tags.Any()
                                        ? string.Join(" • ", Model.Tags)
                                        : "Etiket yok")
                </div>

                <div class="mb-2">
                    <div class="fw-semibold">Telefon</div>
                    <div>@Model.Phone</div>
                </div>

                <div class="mb-2">
                    <div class="fw-semibold">E-posta</div>
                    <div>@Model.Email</div>
                </div>

                <div class="mb-2">
                    <div class="fw-semibold">Son Sipariş</div>
                    <div>
                        @if (Model.LastOrderDate.HasValue)
                        {
                            @Model.LastOrderDate.Value.ToString("dd.MM.yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <div class="fw-semibold mb-1">Notlar</div>
                    <p class="mb-0">
                        @(!string.IsNullOrWhiteSpace(Model.Notes)
                                                ? Model.Notes
                                                : "Bu müşteri hakkında henüz not eklenmemiş.")
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-8 col-lg-7 col-md-12 mb-3">
        <div class="card mb-3">
            <div class="card-body">
                <h6 class="fw-semibold mb-3">CRM Özeti</h6>

                <div class="row text-center">
                    <div class="col-md-3 col-6 mb-3">
                        <div class="text-muted small">Toplam Sipariş</div>
                        <div class="fs-4 fw-semibold">@Model.TotalOrders</div>
                    </div>
                    <div class="col-md-3 col-6 mb-3">
                        <div class="text-muted small">Toplam Harcama</div>
                        <div class="fs-5 fw-semibold">
                            @Model.TotalSpend.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                        </div>
                    </div>
                    <div class="col-md-3 col-6 mb-3">
                        <div class="text-muted small">Ort. Fiș</div>
                        <div class="fs-5 fw-semibold">
                            @Model.AverageTicket.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                        </div>
                    </div>
                    <div class="col-md-3 col-6 mb-3">
                        <div class="text-muted small">Segment</div>
                        <div class="fs-6 fw-semibold">
                            @{
                                string segment = "Standart";

                                if (Model.TotalSpend > 5000)
                                {
                                    segment = "VIP / High Value";
                                }
                                else if (Model.TotalSpend > 2000)
                                {
                                    segment = "Değerli Müşteri";
                                }
                                else if (Model.TotalOrders <= 2)
                                {
                                    segment = "Yeni Müşteri";
                                }

                                @segment
                                                        ;
                            }
                        </div>
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    * Segment ve ortalama fiş değerleri şimdilik lokal hesaplanıyor.
                    İleride sipariş geçmişi ve raporlarla entegre edilebilir.
                </div>
            </div>
        </div>

        @* İleride: Bu müşterinin son siparişleri, rezervasyonları, feedback'leri vb. için ayrı bir tablo eklenebilir *@
    </div>
</div>
