@* ===========================
   UPDATE ABOUT (DRAG & DROP)
   =========================== *@
@using Asp.NetCore10._0_QR_Restaurant_Order.WebUI.DTOs.AboutDTOs
@model UpdateAboutDTO

@{
    ViewData["Title"] = "Hakkımızda Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Hakkımızda", "/About/AboutList/"),
        ("Hakkımızda Güncelle", "")
    };
}

<div class="card bg-white p-20 rounded-10 border border-white mb-4">
    <form method="post" asp-action="UpdateAbout" enctype="multipart/form-data">
        <div class="row">

            @* Update için ID ve eski görsel yolu mutlaka taşınmalı *@
            <input type="hidden" asp-for="AboutID" />
            <input type="hidden" asp-for="AboutImageURL" />

            <!-- SOL TARAF -->
            <div class="col-lg-8">
                <h3 class="mb-20">Hakkımızda Güncelle</h3>

                <div class="row">

                    <div class="col-lg-12">
                        <div class="mb-20">
                            <label class="label fs-16 mb-2">Başlık</label>
                            <div class="form-floating">
                                <input asp-for="AboutTitle" type="text" class="form-control" id="floatingInputTitle2" placeholder="Başlık">
                                <label for="floatingInputTitle2">Başlık</label>
                            </div>
                            <span class="text-danger" asp-validation-for="AboutTitle"></span>
                        </div>
                    </div>

                    <!-- Görsel (Dosya Seç / Sürükle Bırak) -->
                    <div class="col-lg-12">
                        <div class="form-group mb-4 only-file-upload" id="file-upload2">
                            <label class="label fs-16 mb-2 text-secondary">Hakkımızda Görseli Güncelle</label>

                            <div class="form-control h-100 text-center position-relative p-4 p-lg-5" id="dropArea2"
                                 style="cursor:pointer;">
                                <div class="product-upload">
                                    <label class="file-upload mb-0">
                                        <i class="ri-folder-image-line bg-primary bg-opacity-10 p-2 rounded-1 text-primary"></i>
                                        <span class="d-block text-body fs-14">
                                            Görseli sürükleyip bırak veya
                                            <span class="text-primary text-decoration-underline">Gözat</span>
                                        </span>
                                        <small class="text-muted d-block mt-1">JPG, PNG, WEBP önerilir</small>
                                    </label>

                                    <!-- input: dosya -->
                                    <label class="position-absolute top-0 bottom-0 start-0 end-0 cursor">
                                        <input asp-for="AboutImageFile" class="form__file bottom-0"
                                               id="upload-files2" type="file" accept="image/*">
                                    </label>
                                </div>
                            </div>

                            <!-- Seçilen dosya adı / önizleme -->
                            <div class="mt-2 d-flex align-items-center gap-2">
                                <img id="previewImg2"
                                     src="@(string.IsNullOrWhiteSpace(Model.AboutImageURL) ? "" : Model.AboutImageURL)"
                                     alt=""
                                     style="width:48px;height:48px;object-fit:cover;@(string.IsNullOrWhiteSpace(Model.AboutImageURL) ? "display:none;" : "display:block;")border-radius:8px;" />
                                <span id="fileName2" class="text-body fs-14"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="mb-20">
                            <label class="label fs-16 mb-2">Durum</label>
                            <div class="form-floating">
                                <select asp-for="AboutStatus" class="form-select form-control" id="floatingSelectStatus2">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                                <label for="floatingSelectStatus2">Durum</label>
                            </div>
                            <span class="text-danger" asp-validation-for="AboutStatus"></span>
                        </div>
                    </div>

                    <!-- boşluğu koruyoruz -->
                    <div class="col-lg-6"></div>

                    <div class="col-lg-12">
                        <div class="form-group mb-20">
                            <label class="label fs-16 mb-2">Açıklama</label>
                            <div class="form-floating">
                                <textarea asp-for="AboutDescription"
                                          class="form-control"
                                          id="floatingTextareaDesc2"
                                          placeholder="Açıklama"
                                          style="height: 163px; border-color: #D5D9E2;"></textarea>
                                <label for="floatingTextareaDesc2">Açıklama</label>
                            </div>
                            <span class="text-danger" asp-validation-for="AboutDescription"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary fw-normal text-white">Güncelle</button>
                            <a href="/About/AboutList/" class="btn btn-danger fw-normal text-white">İptal</a>
                        </div>
                    </div>

                </div>
            </div>

            <!-- SAĞ TARAF -->
            <div class="col-lg-4">
                <h3 class="mb-20">Mevcut Görsel</h3>

                <div class="card p-3 border">
                    <div class="d-flex align-items-center gap-3">
                        <img id="previewImgSide2"
                             src="@(string.IsNullOrWhiteSpace(Model.AboutImageURL) ? "" : Model.AboutImageURL)"
                             alt=""
                             style="width:72px;height:72px;object-fit:cover;@(string.IsNullOrWhiteSpace(Model.AboutImageURL) ? "display:none;" : "display:block;")border-radius:12px;" />
                        <div class="flex-grow-1">
                            <div class="fw-semibold" id="titlePreviewText2">@(!string.IsNullOrWhiteSpace(Model.AboutTitle) ? Model.AboutTitle : "Başlık")</div>
                            <small class="text-muted d-block" id="statusPreviewText2">Durum: @(Model.AboutStatus ? "Aktif" : "Pasif")</small>
                        </div>
                    </div>
                    <hr class="my-3" />
                    <div class="text-muted" style="max-height: 120px; overflow:auto;" id="descPreviewText2">
                        @(!string.IsNullOrWhiteSpace(Model.AboutDescription) ? Model.AboutDescription : "Açıklama")
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

<script>
    // Drag & Drop + preview (tasarımı bozmadan)
    const dropArea2 = document.getElementById("dropArea2");
    const fileInput2 = document.getElementById("upload-files2");
    const fileName2 = document.getElementById("fileName2");
    const previewImg2 = document.getElementById("previewImg2");
    const previewImgSide2 = document.getElementById("previewImgSide2");

    // sağ kart canlı önizleme
    const titleInput2 = document.getElementById("floatingInputTitle2");
    const descInput2 = document.getElementById("floatingTextareaDesc2");
    const statusSelect2 = document.getElementById("floatingSelectStatus2");

    const titlePreviewText2 = document.getElementById("titlePreviewText2");
    const descPreviewText2 = document.getElementById("descPreviewText2");
    const statusPreviewText2 = document.getElementById("statusPreviewText2");

    function showPreview2(file) {
        if (!file) return;

        fileName2.textContent = file.name;

        const url = URL.createObjectURL(file);

        previewImg2.src = url;
        previewImg2.style.display = "block";

        previewImgSide2.src = url;
        previewImgSide2.style.display = "block";
    }

    fileInput2.addEventListener("change", () => {
        const file = fileInput2.files && fileInput2.files[0];
        showPreview2(file);
    });

    // sürükle bırak
    ["dragenter", "dragover"].forEach(evt => {
        dropArea2.addEventListener(evt, e => {
            e.preventDefault();
            e.stopPropagation();
            dropArea2.classList.add("border", "border-primary");
        });
    });

    ["dragleave", "drop"].forEach(evt => {
        dropArea2.addEventListener(evt, e => {
            e.preventDefault();
            e.stopPropagation();
            dropArea2.classList.remove("border", "border-primary");
        });
    });

    dropArea2.addEventListener("drop", e => {
        const files = e.dataTransfer.files;
        if (!files || files.length === 0) return;

        // input'a dosyayı atıyoruz
        fileInput2.files = files;

        showPreview2(files[0]);
    });

    // Sağ kart canlı önizleme (başlık, açıklama, durum)
    titleInput2.addEventListener("input", () => {
        titlePreviewText2.textContent = titleInput2.value?.trim() ? titleInput2.value : "Başlık";
    });

    descInput2.addEventListener("input", () => {
        descPreviewText2.textContent = descInput2.value?.trim() ? descInput2.value : "Açıklama";
    });

    statusSelect2.addEventListener("change", () => {
        const val = statusSelect2.value === "true" ? "Aktif" : "Pasif";
        statusPreviewText2.textContent = `Durum: ${val}`;
    });
</script>
