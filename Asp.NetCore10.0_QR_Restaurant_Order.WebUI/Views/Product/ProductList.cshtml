@model List<ResultProductWithCategoryDTO>
@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Ürünler", "/Product/ProductList/"),
        ("Ürün Listesi", "") // Son eleman link olmayacak
    };
}

<div class="default-table-area mx-minus-1 table-to-do-list">
    <div class="table-responsive">
        <table class="table align-middle w-100">
            <thead>
                <tr>
                    <th scope="col" class="fw-medium" style="width:62px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                        </div>
                    </th>
                    <th scope="col" class="fw-medium">Ürün</th>
                    <th scope="col" class="fw-medium">Kategori</th>
                    <th scope="col" class="fw-medium">Fiyat</th>
                    <th scope="col" class="fw-medium">Durum</th>
                    <th scope="col" class="fw-medium text-end">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Checkbox -->
                        <td class="text-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox">
                            </div>
                        </td>

                        <!-- Product -->
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <img src="@item.ProductImageURL"
                                     class="rounded-1"
                                     style="width:40px;height:40px;object-fit:cover;" />

                                <div>
                                    <span class="fw-medium text-secondary d-block">
                                        @item.ProductName
                                    </span>
                                    <small class="text-muted">
                                        @(item.ProductDescription?.Length > 40
                                                                            ? item.ProductDescription.Substring(0, 40) + "..."
                                                                            : item.ProductDescription)
                                    </small>
                                </div>
                            </div>
                        </td>

                        <!-- Category -->
                        <td class="text-secondary fw-medium">
                            @item.CategoryName
                        </td>

                        <!-- Price -->
                        <td class="fw-medium">
                            @item.ProductPrice.ToString("0.00") ₺
                        </td>

                        <!-- Status -->
                        <td>
                            @if (item.ProductStatus)
                            {
                                <span class="text-success bg-success bg-opacity-10 fs-15 fw-normal d-inline-block default-badge">
                                    Aktif
                                </span>
                            }
                            else
                            {
                                <span class="text-danger bg-danger bg-opacity-10 fs-15 fw-normal d-inline-block default-badge">
                                    Pasif
                                </span>
                            }
                        </td>

                        <!-- Actions -->
                        <td>
                            <div class="d-flex justify-content-end" style="gap:12px;">
                                <a href="/Product/UpdateProduct/@item.ProductID"
                                   class="bg-transparent p-0 border-0 hover-text-success"
                                   data-bs-toggle="tooltip"
                                   title="Düzenle">
                                    <i class="material-symbols-outlined fs-16 text-body">edit</i>
                                </a>

                                <a href="/Product/DeleteProduct/@item.ProductID"
                                   class="bg-transparent p-0 border-0 hover-text-danger"
                                   data-bs-toggle="tooltip"
                                   title="Sil"
                                   onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    <i class="material-symbols-outlined fs-16 text-body">delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination (template korunuyor – backend bağlanabilir) -->
    <div class="d-flex justify-content-center justify-content-sm-between align-items-center text-center flex-wrap gap-2 showing-wrap pt-15 p-20">
        <span class="fs-15">Showing 1 to 10 of 50 entries</span>

        <nav class="custom-pagination">
            <ul class="pagination mb-0 justify-content-center">
                <li class="page-item">
                    <button class="page-link icon">
                        <i class="material-symbols-outlined">west</i>
                    </button>
                </li>
                <li class="page-item">
                    <button class="page-link active">1</button>
                </li>
                <li class="page-item">
                    <button class="page-link">2</button>
                </li>
                <li class="page-item">
                    <button class="page-link icon">
                        <i class="material-symbols-outlined">east</i>
                    </button>
                </li>
            </ul>
        </nav>
    </div>
</div>
