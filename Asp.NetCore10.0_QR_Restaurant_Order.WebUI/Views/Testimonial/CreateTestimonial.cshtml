@using Asp.NetCore10._0_QR_Restaurant_Order.WebUI.DTOs.TestimonialDTOs
@model CreateTestimonialDTO

@{
    ViewData["Title"] = "Yorum Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Yorumlar", "/Testimonial/TestimonialList/"),
        ("Yorum Ekle", "")
    };
}

<div class="card bg-white p-20 rounded-10 border border-white mb-4">
    <form method="post" asp-action="CreateTestimonial" enctype="multipart/form-data">
        <div class="row">

            <!-- SOL TARAF -->
            <div class="col-lg-8">
                <h3 class="mb-20">Yorum Ekle</h3>

                <div class="row">

                    <div class="col-lg-6">
                        <div class="mb-20">
                            <label class="label fs-16 mb-2">Ad</label>
                            <div class="form-floating">
                                <input asp-for="TestimonialName" type="text" class="form-control" id="floatingName" placeholder="Ad">
                                <label for="floatingName">Ad</label>
                            </div>
                            <span class="text-danger" asp-validation-for="TestimonialName"></span>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="mb-20">
                            <label class="label fs-16 mb-2">Soyad</label>
                            <div class="form-floating">
                                <input asp-for="TestimonialSurname" type="text" class="form-control" id="floatingSurname" placeholder="Soyad">
                                <label for="floatingSurname">Soyad</label>
                            </div>
                            <span class="text-danger" asp-validation-for="TestimonialSurname"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group mb-4 only-file-upload" id="file-upload">
                            <label class="label fs-16 mb-2 text-secondary">Kullanıcı Görseli</label>

                            <div class="form-control h-100 text-center position-relative p-4 p-lg-5" id="dropArea"
                                 style="cursor:pointer;">
                                <div class="product-upload">
                                    <label class="file-upload mb-0">
                                        <i class="ri-folder-image-line bg-primary bg-opacity-10 p-2 rounded-1 text-primary"></i>
                                        <span class="d-block text-body fs-14">
                                            Görseli sürükleyip bırak veya
                                            <span class="text-primary text-decoration-underline">Gözat</span>
                                        </span>
                                        <small class="text-muted d-block mt-1">JPG, PNG, WEBP önerilir</small>
                                    </label>

                                    <label class="position-absolute top-0 bottom-0 start-0 end-0 cursor">
                                        <input asp-for="TestimonialImageFile" class="form__file bottom-0"
                                               id="upload-files" type="file" accept="image/*">
                                    </label>
                                </div>
                            </div>

                            <div class="mt-2 d-flex align-items-center gap-2">
                                <img id="previewImg" src="" alt=""
                                     style="width:48px;height:48px;object-fit:cover;display:none;border-radius:10px;" />
                                <span id="fileName" class="text-body fs-14"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="mb-20">
                            <label class="label fs-16 mb-2">Durum</label>
                            <div class="form-floating">
                                <select asp-for="TestimonialStatus" class="form-select form-control" id="floatingStatus">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                                <label for="floatingStatus">Durum</label>
                            </div>
                            <span class="text-danger" asp-validation-for="TestimonialStatus"></span>
                        </div>
                    </div>

                    <div class="col-lg-6"></div>

                    <div class="col-lg-12">
                        <div class="mb-20">
                            <label class="label fs-16 mb-2">Yorum</label>
                            <div class="form-floating">
                                <textarea asp-for="TestimonialComment"
                                          class="form-control"
                                          id="floatingComment"
                                          placeholder="Yorum"
                                          style="height: 160px; border-color: #D5D9E2;"></textarea>
                                <label for="floatingComment">Yorum</label>
                            </div>
                            <span class="text-danger" asp-validation-for="TestimonialComment"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary fw-normal text-white">Kaydet</button>
                            <a href="/Testimonial/TestimonialList/" class="btn btn-danger fw-normal text-white">İptal</a>
                        </div>
                    </div>

                </div>
            </div>

            <!-- SAĞ TARAF -->
            <div class="col-lg-4">
                <h3 class="mb-20">Önizleme</h3>

                <div class="card p-3 border">
                    <div class="d-flex align-items-center gap-2">
                        <img id="previewImgRight" src="/images/default-user.png"
                             style="width:44px;height:44px;border-radius:12px;object-fit:cover;" />
                        <div>
                            <div class="fw-semibold" id="namePreview">Ad Soyad</div>
                            <small class="text-muted" id="statusPreview">Durum: Aktif</small>
                        </div>
                    </div>
                    <hr class="my-3" />
                    <div class="text-muted" style="max-height: 160px; overflow:auto;" id="commentPreview">
                        Yorum buraya yansır...
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

<script>
    // Drag & Drop + preview
    const dropArea = document.getElementById("dropArea");
    const fileInput = document.getElementById("upload-files");
    const fileName = document.getElementById("fileName");
    const previewImg = document.getElementById("previewImg");
    const previewImgRight = document.getElementById("previewImgRight");

    function showPreview(file) {
        if (!file) return;

        fileName.textContent = file.name;

        const url = URL.createObjectURL(file);
        previewImg.src = url;
        previewImg.style.display = "block";
        previewImgRight.src = url;
    }

    fileInput.addEventListener("change", () => {
        const file = fileInput.files && fileInput.files[0];
        showPreview(file);
    });

    ["dragenter", "dragover"].forEach(evt => {
        dropArea.addEventListener(evt, e => {
            e.preventDefault();
            e.stopPropagation();
            dropArea.classList.add("border", "border-primary");
        });
    });

    ["dragleave", "drop"].forEach(evt => {
        dropArea.addEventListener(evt, e => {
            e.preventDefault();
            e.stopPropagation();
            dropArea.classList.remove("border", "border-primary");
        });
    });

    dropArea.addEventListener("drop", e => {
        const files = e.dataTransfer.files;
        if (!files || files.length === 0) return;
        fileInput.files = files;
        showPreview(files[0]);
    });

    // canlı önizleme
    const nameInput = document.getElementById("floatingName");
    const surnameInput = document.getElementById("floatingSurname");
    const statusSelect = document.getElementById("floatingStatus");
    const commentInput = document.getElementById("floatingComment");

    const namePreview = document.getElementById("namePreview");
    const statusPreview = document.getElementById("statusPreview");
    const commentPreview = document.getElementById("commentPreview");

    function renderName() {
        const n = nameInput.value?.trim() || "Ad";
        const s = surnameInput.value?.trim() || "Soyad";
        namePreview.textContent = `${n} ${s}`;
    }

    nameInput.addEventListener("input", renderName);
    surnameInput.addEventListener("input", renderName);

    statusSelect.addEventListener("change", () => {
        const val = statusSelect.value === "true" ? "Aktif" : "Pasif";
        statusPreview.textContent = `Durum: ${val}`;
    });

    commentInput.addEventListener("input", () => {
        commentPreview.textContent = commentInput.value?.trim() ? commentInput.value : "Yorum buraya yansır...";
    });
</script>
